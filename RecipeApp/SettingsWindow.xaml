<Window x:Class="RecipeApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeApp"
        mc:Ignorable="d"
        Title="Settings" Height="400" Width="400" ResizeMode="NoResize" Closed="Window_Closed">
    <Grid>
        <Button x:Name="btn_settings_save" Content="Save" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Width="122" Click="btn_settings_save_Click"/>
        <ComboBox x:Name="SettingsLanguageList" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="245"/>
    </Grid>
</Window>
