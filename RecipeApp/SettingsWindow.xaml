<Window x:Class="RecipeApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeApp"
        mc:Ignorable="d"
        Title="Settings" Height="400" Width="300">
    <Grid>
        <Grid x:Name="SettingsMain">
            <Label Content="Jazyk" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            <ComboBox x:Name="SettingsMain_LanguageList" HorizontalAlignment="Center" Margin="0,41,0,0" VerticalAlignment="Top" Width="280"/>
            <Button x:Name="SettingsMain_Save" Content="Uložit" HorizontalAlignment="Center" Margin="0,313,0,0" VerticalAlignment="Top" Width="280" Height="50" Click="SettingsMain_Save_Click"/>

        </Grid>
    </Grid>
</Window>
